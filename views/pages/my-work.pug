extends ../layouts/main_layout.pug

block link
	-var selected = 'Мои работы';

block title
	title Мои работы

block content
	section.aboutbox
		.aboutbox-header Мои работы
		.aboutbox-body.clearfix
			.projects-wrapper
				.projects-list
					each item in projects
						//- Проект
						li.projects-item
							.hover-img
								img.project-img(src=item.image, alt=item.title)
								.zoom-wrapper
									a.zoom-link(href=item.url, target="_blank") #{item.title}
							a.project-link(href=item.url, target="_blank") #{item.title}
							.project-desc #{item.description}

					//- Добавить проект
					if user.isAdmin
						li.projects-item.add-new-item
							a.add-new-link#add-new-item(href="#")
								.add-new-text Добавить проект

	include ../common/popup.pug
